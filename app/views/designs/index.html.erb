<h1>Listing designs</h1>

<table>
  <thead>
    <tr>
      <th>Design</th>
      <th>Product</th>
      <th>Account</th>
      <th>Account file</th>
      <th>Save method</th>
      <th>Total units</th>
      <th>Has upload</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Postal code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designs.each do |design| %>
      <tr>
        <td><%= design.design_id %></td>
        <td><%= design.product_id %></td>
        <td><%= design.account_id %></td>
        <td><%= design.account_file %></td>
        <td><%= design.save_method %></td>
        <td><%= design.total_units %></td>
        <td><%= design.has_upload %></td>
        <td><%= design.created_at %></td>
        <td><%= design.updated_at %></td>
        <td><%= design.postal_code %></td>
        <td><%= link_to 'Show', design %></td>
        <td><%= link_to 'Edit', edit_design_path(design) %></td>
        <td><%= link_to 'Destroy', design, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Design', new_design_path %>
